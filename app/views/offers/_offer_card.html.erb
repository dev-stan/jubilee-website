<div class="offer-card card h-100 border-light">
  <div class="position-relative">
    <%= link_to image_tag(offer.image_url, class: "offer-card-image"), offer_path(offer) %>
    <%= link_to "From 89.99$", offer_path(offer), class: "offer-card-delete" %>
  </div>
  <div class="card-body d-flex flex-column">
    <h5 class="card-title  fw-bold mb-3"><%= link_to offer.title, offer_path(offer), class: "text-decoration-none text-dark", style: "color: black !important;" %></h5>
    <div class="meta-info mt-auto">
      <div class="d-flex align-items-center mb-2">
        <i class="fa-solid fa-clock me-2"></i>2 hours
      </div>
      <div class="d-flex align-items-center mb-2">
        <i class="fa-solid fa-language me-2"></i>English, Italian
      </div>
      <div class="d-flex align-items-center">
        <i class="fa-solid fa-user-group me-2"></i>Up to 15 people
      </div>
    </div>
  </div>
</div>